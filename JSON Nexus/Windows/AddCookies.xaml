<Window x:Class="JSON_Nexus.Windows.AddCookies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Nexus.Windows"
        mc:Ignorable="d"
        Title="AddCookies" Height="450" Width="800">
    <Grid>
        <Button Name="AddCookieProperty" Click="AddCookieProperty_Click"
                Content="Create New Cookie" Width="150" Height="25"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"/>

        <Button Name="AddCookieToRequest" Click="AddCookieToRequest_Click"
                Content="Add Cookies to Request" Width="150" Height="25"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"/>

        <StackPanel Orientation="Vertical" Name="cookieContainer">
            
        </StackPanel>
    </Grid>
</Window>
